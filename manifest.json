{
  "manifest_version": 3,
  "name": "SynthX - On-Chain AI Copilot",
  "version": "1.0.0",
  "description": "Transform Blockscout into an AI-powered investigation tool. Get natural-language explanations of transactions, addresses, and contracts.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://*.blockscout.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.blockscout.com/address/*",
        "https://*.blockscout.com/tx/*",
        "https://*.blockscout.com/token/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SynthX - AI Copilot"
  },
  "background": {
    "service_worker": "background.js"
  }
}
