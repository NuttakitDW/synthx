{
  "manifest_version": 3,
  "name": "SynthX - Contract Scanner",
  "version": "1.0.0",
  "description": "Analyze Ethereum contracts for safety using AI. Get instant verdict: SAFE / RISKY / SCAM.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://eth.blockscout.com/*",
    "https://sepolia.blockscout.com/*"
  ],
  "action": {
    "default_popup": "sidebar.html",
    "default_title": "SynthX - Contract Scanner"
  },
  "background": {
    "service_worker": "background.js"
  }
}
